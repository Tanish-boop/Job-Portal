<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>JobPortal - Find Your Dream Job</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Load Font Awesome for icons -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />
    <style>
      :root {
        font-family: "Inter", sans-serif;
      }
      /* Custom hover effect for job cards - mimics the "lift" in the original code */
      .job-card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        border-radius: 1rem; /* rounded-xl */
      }
      .job-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
      }
      .skills-tag {
        display: inline-block;
        padding: 0.2rem 0.6rem;
        margin-right: 0.5rem;
        margin-top: 0.4rem;
        border-radius: 0.5rem;
        font-size: 0.75rem; /* text-xs */
        font-weight: 500;
        background-color: #eef2ff; /* Indigo-50 */
        color: #4f46e5; /* Indigo-600 */
      }
    </style>
  </head>
  <body class="bg-gray-50">
    <!-- Navigation Bar -->
    <nav class="bg-white shadow-lg sticky top-0 z-10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <!-- Logo -->
          <a
            class="flex items-center text-2xl font-extrabold text-gray-800"
            href="/signedIn"
          >
            <i class="fas fa-briefcase text-indigo-600 mr-2"></i>
            JobPortal
          </a>

          <!-- Desktop Links (Logged in as seeker) -->
          <div class="hidden md:flex space-x-4 items-center">
            <span class="text-gray-600">Welcome, <%= user.name %>!</span>
            <a
              href="/signedIn"
              class="text-indigo-600 hover:text-indigo-800 px-3 py-2 text-sm font-medium transition duration-150"
              >Home</a
            >
            <form action="/logout" method="POST" class="inline">
              <button
                type="submit"
                class="bg-red-600 text-white px-4 py-2 text-sm font-medium rounded-full hover:bg-red-700 transition duration-150 shadow-md"
              >
                Logout
              </button>
            </form>
          </div>

          <!-- Mobile Menu Button (Hamburger) -->
          <button
            id="mobile-menu-button"
            class="md:hidden p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500"
          >
            <span class="sr-only">Open main menu</span>
            <i class="fas fa-bars h-6 w-6"></i>
          </button>
        </div>
      </div>
      <!-- Mobile Menu (Hidden by default) -->
      <div id="mobile-menu" class="hidden md:hidden">
        <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
          <span class="block px-3 py-2 text-base font-medium text-gray-700"
            >Welcome, <%= user.name %>!</span
          >
          <a
            href="/signedIn"
            class="block px-3 py-2 rounded-md text-base font-medium text-indigo-600 hover:bg-gray-50 hover:text-indigo-800"
            >Home</a
          >
          <form action="/logout" method="POST" class="inline">
            <button
              type="submit"
              class="block w-full text-left px-3 py-2 rounded-md text-base font-medium text-white bg-red-600 hover:bg-red-700"
            >
              Logout
            </button>
          </form>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section
      class="bg-indigo-600 text-white pt-20 pb-24 mb-10 rounded-b-3xl shadow-xl"
    >
      <div class="max-w-5xl mx-auto px-4 text-center">
        <h1 class="text-4xl sm:text-5xl font-extrabold mb-4 leading-tight">
          Welcome back, <%= user.name %>!
        </h1>
        <p class="text-indigo-100 text-lg sm:text-xl mb-8">
          Discover new opportunities and continue your job search journey
        </p>
        <!-- CTA Button -->
        <a
          href="#jobs"
          class="inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-bold rounded-full text-gray-900 bg-amber-400 hover:bg-amber-300 shadow-xl transition duration-300 transform hover:scale-105"
        >
          Browse Jobs
        </a>
      </div>
    </section>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Search Form -->
      <div
        class="max-w-4xl mx-auto -mt-20 z-10 relative bg-white p-6 rounded-2xl shadow-2xl"
      >
        <form
          action="/signedIn"
          method="GET"
          class="flex flex-col md:flex-row gap-3 items-center"
        >
          <div class="w-full md:w-8/12">
            <input
              type="text"
              class="w-full px-5 py-3 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-indigo-500 transition duration-150 text-gray-700 placeholder-gray-400 text-lg"
              name="term"
              placeholder="Search by job title, company, or location..."
              value="<%= searchTerm %>"
            />
          </div>
          <div class="w-1/2 md:w-2/12">
            <button
              type="submit"
              class="w-full flex items-center justify-center py-3 px-6 border border-transparent text-base font-semibold rounded-full text-white bg-indigo-600 hover:bg-indigo-700 shadow-lg transition duration-200"
            >
              <i class="fas fa-search mr-2"></i>Search
            </button>
          </div>
          <!-- Clear Button -->
          <div class="w-1/2 md:w-2/12">
            <a
              href="/signedIn"
              class="w-full flex items-center justify-center py-3 px-6 border border-gray-300 text-base font-semibold rounded-full text-gray-700 bg-white hover:bg-gray-100 transition duration-200"
            >
              Clear
            </a>
          </div>
        </form>
      </div>

      <!-- Job Listings -->
      <div id="jobs" class="py-10">
        <h2 class="text-3xl font-bold text-gray-800 text-center mb-8">
          <i class="fas fa-list-ul text-indigo-600 mr-2"></i>
          Job Listings (<span id="job-count">0</span> Found)
        </h2>

        <div
          id="job-listings-grid"
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
        >
          <!-- Job Cards will be injected here by JavaScript -->
        </div>

        <div id="no-jobs-found" class="hidden text-center py-12">
          <i class="fas fa-search fa-4x text-gray-300 mb-4"></i>
          <h4 class="text-2xl text-gray-500 font-semibold">No jobs found</h4>
          <p class="text-gray-400 mt-2">
            Try adjusting your search criteria or check back later for new
            opportunities.
          </p>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer
      class="bg-gray-800 text-white mt-10 pt-10 pb-6 rounded-t-3xl shadow-inner"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div
          class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center md:text-left"
        >
          <!-- Company Info -->
          <div class="col-span-2 md:col-span-1">
            <h5 class="text-xl font-bold mb-2 text-indigo-400">JobPortal</h5>
            <p class="text-gray-400 text-sm">
              Connecting talent with opportunity since 2024.
            </p>
            <div class="flex space-x-4 mt-4 justify-center md:justify-start">
              <a href="#" class="text-gray-400 hover:text-indigo-400"
                ><i class="fab fa-facebook-f"></i
              ></a>
              <a href="#" class="text-gray-400 hover:text-indigo-400"
                ><i class="fab fa-twitter"></i
              ></a>
              <a href="#" class="text-gray-400 hover:text-indigo-400"
                ><i class="fab fa-linkedin-in"></i
              ></a>
            </div>
          </div>

          <!-- Job Seekers -->
          <div>
            <h6 class="text-lg font-semibold mb-3 text-white">
              For Job Seekers
            </h6>
            <ul class="space-y-2 text-sm">
              <li>
                <a
                  href="/signedIn"
                  class="text-gray-400 hover:text-white transition duration-150"
                  >Browse Jobs</a
                >
              </li>
              <li>
                <a
                  href="#"
                  class="text-gray-400 hover:text-white transition duration-150"
                  >My Applications</a
                >
              </li>
              <li>
                <a
                  href="#"
                  class="text-gray-400 hover:text-white transition duration-150"
                  >Resume Tips</a
                >
              </li>
            </ul>
          </div>

          <!-- For Employers -->
          <div>
            <h6 class="text-lg font-semibold mb-3 text-white">For Employers</h6>
            <ul class="space-y-2 text-sm">
              <li>
                <a
                  href="/register"
                  class="text-gray-400 hover:text-white transition duration-150"
                  >Post a Job</a
                >
              </li>
              <li>
                <a
                  href="/recruiter/dashboard"
                  class="text-gray-400 hover:text-white transition duration-150"
                  >Manage Jobs</a
                >
              </li>
              <li>
                <a
                  href="#"
                  class="text-gray-400 hover:text-white transition duration-150"
                  >Recruiting Tools</a
                >
              </li>
            </ul>
          </div>

          <!-- Legal/Support -->
          <div>
            <h6 class="text-lg font-semibold mb-3 text-white">Support</h6>
            <ul class="space-y-2 text-sm">
              <li>
                <a
                  href="#"
                  class="text-gray-400 hover:text-white transition duration-150"
                  >Privacy Policy</a
                >
              </li>
              <li>
                <a
                  href="#"
                  class="text-gray-400 hover:text-white transition duration-150"
                  >Terms of Service</a
                >
              </li>
              <li>
                <a
                  href="#"
                  class="text-gray-400 hover:text-white transition duration-150"
                  >Contact Us</a
                >
              </li>
            </ul>
          </div>
        </div>

        <div class="border-t border-gray-700 my-6"></div>

        <div class="text-center text-gray-500 text-sm">
          <p>&copy; 2024 JobPortal. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <script type="application/json" id="jobs-data">
      <%- JSON.stringify(jobs) %>
    </script>
    <script>
      const jobListingsGrid = document.getElementById("job-listings-grid");
      const jobCountElement = document.getElementById("job-count");
      const jobsData = JSON.parse(
        document.getElementById("jobs-data").textContent
      );
      const mockJobs = jobsData;

      jobCountElement.textContent = mockJobs.length;

      // Function to render the job cards
      function renderJobCards() {
        if (mockJobs.length === 0) {
          document.getElementById("no-jobs-found").classList.remove("hidden");
          return;
        }

        jobListingsGrid.innerHTML = ""; // Clear existing content

        mockJobs.forEach((job) => {
          const skillsArray = job.skills
            ? job.skills.split(",").map((s) => s.trim())
            : [];
          const skillsToShow = skillsArray.slice(0, 3);
          const remainingSkills = skillsArray.length - 3;

          let locationHTML = "";
          if (job.location) {
            locationHTML = `
                      <p class="text-gray-500 text-sm mb-1">
                          <i class="fas fa-map-marker-alt w-4 mr-1 text-indigo-400"></i>
                          ${job.location}
                      </p>`;
          }

          let salaryHTML = "";
          if (job.salary) {
            salaryHTML = `
                      <p class="text-green-600 font-semibold text-base mb-3">
                          <i class="fas fa-dollar-sign w-4 mr-1 text-green-500"></i>
                          ${job.salary}
                      </p>`;
          }

          let skillsHTML = "";
          if (job.skills) {
            let skillsTags = skillsToShow
              .map((skill) => `<span class="skills-tag">${skill}</span>`)
              .join("");
            if (remainingSkills > 0) {
              skillsTags += `<span class="text-gray-400 text-xs mt-1 ml-1 self-end">+${remainingSkills} more</span>`;
            }
            skillsHTML = `<div class="mb-4 flex flex-wrap">${skillsTags}</div>`;
          }

          const cardHTML = `
                  <div class="job-card bg-white p-6 shadow-md hover:shadow-xl flex flex-col h-full border border-gray-100">
                      <h3 class="text-xl font-bold mb-2">
                          <a href="/job/${job.jobId}" class="text-indigo-600 hover:text-indigo-800 transition duration-150">
                              ${job.title}
                          </a>
                      </h3>

                      <p class="text-gray-500 text-sm mb-1">
                          <i class="fas fa-building w-4 mr-1 text-indigo-400"></i>
                          ${job.company}
                      </p>

                      ${locationHTML}
                      ${salaryHTML}
                      ${skillsHTML}

                      <a href="/job/${job.jobId}" class="mt-auto self-start text-sm font-semibold text-white bg-indigo-600 px-6 py-2 rounded-full hover:bg-indigo-700 transition duration-200 shadow-md">
                          View Details <i class="fas fa-arrow-right ml-1 text-xs"></i>
                      </a>
                  </div>
              `;
          jobListingsGrid.insertAdjacentHTML("beforeend", cardHTML);
        });
      }

      // Toggle mobile menu
      document
        .getElementById("mobile-menu-button")
        .addEventListener("click", () => {
          const menu = document.getElementById("mobile-menu");
          menu.classList.toggle("hidden");
        });

      // Render cards on page load
      window.onload = renderJobCards;
    </script>
  </body>
</html>
